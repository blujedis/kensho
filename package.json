{
  "name": "kensho",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "configs/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:js": "turbo run dev --filter={js,adapter-javascript,form,validator} --parallel",
    "dev:next": "turbo run dev --filter={next,adapter-react,form,validator} --parallel",
    "dev:svelte": "turbo run dev --filter={svelte,adapter-svelte,form,validator} --parallel",
    "dev:solid": "turbo run dev --filter={form,validator,adapter-solid,solid} --parallel",
    "build:next": "turbo run build --filter={next,adapter-react,form,validator",
    "build:svelte": "turbo run build --filter={svelte,adapter-svelte,form,validator",
    "build:js": "turbo run build --filter={js,adapter-javascript,form,validator}",
    "build": "turbo run build --filter={adapter-svelte,adapter-react,form,validator}",
    "lint": "turbo run lint --filter={adapter-svelte,adapter-react,form,validator}",
    "format": "turbo run format",
    "test": "turbo run test",
    "prepare": "husky install",
    "change": "changeset add",
    "bump": "changeset version",
    "release": "changeset publish",
    "pushtags": "git push --follow-tags"
  },
  "devDependencies": {
    "husky": "^8.0.1",
    "prettier": "latest",
    "turbo": "latest",
    "@changesets/cli": "^2.23.0"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  }
}